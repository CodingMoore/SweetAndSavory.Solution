@{
  Layout = "_Layout";
}

@using SweetAndSavory.ViewModels

@model LoginViewModel

<h2>Log in with your account</h2>

@if (ViewBag.loginFail == true)
{
<p class="warning">Log in attempt failed!</p>
}
<hr />
@using (Html.BeginForm(new { returnUrl = ViewBag.ReturnUrl }))
{
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { @required = "required"})

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { @required = "required"})

    <input type="submit" value="Log in" class="btn btn-default" />
}
<p>@Html.ActionLink("Create an account", "Register", "Account")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>