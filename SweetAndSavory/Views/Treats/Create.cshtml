@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h2>Add a new Treat</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.TreatName)
    @Html.TextBoxFor(model => model.TreatName)

    @Html.LabelFor(model => model.DateAdded)
    @Html.TextBoxFor(model => model.DateAdded, new { @type = "date"})

    <input type="submit" value="Add new Treat" class="btn btn-default" />
}